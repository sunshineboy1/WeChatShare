<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_friends_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="分享文字给好友"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_friends_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="分享图片给好友"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_friends_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="分享网页给好友"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_timeline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:text="分享文字到朋友圈"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_timeline_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="分享图片到朋友圈"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_timeline_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="分享网页到朋友圈"
        android:onClick="onClick"/>



</LinearLayout>
